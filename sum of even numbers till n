import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
        
        Scanner s = new Scanner(System.in);
        
        int n;
        n = s.nextInt();
        int i = 0;
        int sum =0;
        while (i<=n){
            sum=sum+i;
            i=i+2;
        }
		System.out.println(sum);
		

	}

}
